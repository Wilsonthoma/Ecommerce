{
  "name": "mern-ecommerce-backend",
  "version": "1.0.0",
  "description": "Full-stack MERN E-commerce Backend with Admin Dashboard",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "server": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "seed": "node seeder.js",
    "seed:destroy": "node seeder.js -d",
    "seed:reset": "npm run seed:destroy && npm run seed",
    "test": "jest --watchAll --verbose --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\"",
    "docker:build": "docker build -t mern-ecommerce-backend .",
    "docker:run": "docker run -p 5000:5000 mern-ecommerce-backend",
    "docker:compose": "docker-compose up",
    "docker:compose:build": "docker-compose up --build"
  },
  "keywords": [
    "mern",
    "ecommerce",
    "admin",
    "dashboard",
    "backend",
    "api",
    "rest",
    "mongodb",
    "express",
    "jwt",
    "authentication",
    "oauth",
    "google-auth"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.987.0",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "google-auth-library": "^10.5.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "juice": "^11.1.1",
    "mongoose": "^8.20.3",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.11",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "rate-limit-redis": "^4.3.1",
    "resend": "^6.9.2",
    "uuid": "^9.0.1",
    "validator": "^13.15.26",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.0.3",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mern-ecommerce-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mern-ecommerce-backend/issues"
  },
  "homepage": "https://github.com/yourusername/mern-ecommerce-backend#readme",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/uploads/"
    ]
  }
}
